{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./",
    "baseUrl": ".",
    "typeRoots": ["./src/typings.d.ts"],
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "virtual:reload-on-update-in-background-script": ["./src/typings.d.ts"],
      "virtual:reload-on-update-in-view": ["./src/typings.d.ts"]
    }
  },
  "include": [
    "src", "vite.config.ts", ".eslintrc.js", "./src/typings.d.ts",
  ],

  "exclude": [
    "vite.config.prod.ts",
    "dist",
    "node_modules"
  ]
}
